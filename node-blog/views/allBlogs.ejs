<%- include("./header.ejs") %>
<body>
    <div class="container">
        <h1><%= h1 %></h1>
        <%- include("../nav.ejs") %>
        
        <div class="blogs-container">
            <% if (blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <div class="blog-card">
                        <a href = "/blogs/<%= blog._id%>">
                            <h2 class="blog-title"><%= blog.title %></h2>
                            <p class="blog-snippet"><%= blog.snippet %></p>
                            
                        </a>
                      
                        <p class="blog-body"><%= blog.body %></p>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No blogs available.</p>
            <% } %>
        </div>
    </div>
</body>
</html>
